<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F0F0F0"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_productImage"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_menu_camera" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tv_productName"
                        android:layout_width="223dp"
                        android:layout_height="34dp"
                        android:text="onion"
                        android:layout_marginLeft="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0.034" />

                    <ImageView
                        android:id="@+id/image_array_7"
                        android:layout_width="45dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/a"
                        android:layout_marginRight="5dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="3dp"
                        app:layout_constraintLeft_toRightOf="@+id/tv_productName"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:id="@+id/tv_productQuantity"
                        android:layout_width="152dp"
                        android:layout_height="32dp"
                        android:textSize="15sp"
                        android:text="1 kg"
                        tools:layout_editor_absoluteX="2dp"
                        tools:layout_editor_absoluteY="39dp" />





                    <TextView
                        android:id="@+id/tv_productPrice"
                        android:text="price $40"
                        android:layout_width="49dp"
                        android:layout_height="33dp"
                        tools:layout_editor_absoluteX="2dp"
                        tools:layout_editor_absoluteY="71dp" />

                    <TextView
                        android:id="@+id/tv_productPrice2"
                        android:layout_width="49dp"
                        android:layout_height="33dp"
                        android:typeface="sans"
                        android:text="price $40"
                        tools:layout_editor_absoluteX="51dp"
                        tools:layout_editor_absoluteY="71dp" />

                    <ImageView
                        android:id="@+id/imageView8_ase"
                        android:layout_width="49dp"
                        android:layout_height="33dp"
                        app:srcCompat="@drawable/a"
                        tools:layout_editor_absoluteX="154dp"
                        tools:layout_editor_absoluteY="71dp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="25dp"
                        android:layout_height="33dp"
                        android:text="TextView"
                        tools:layout_editor_absoluteY="71dp"
                        app:layout_constraintLeft_toRightOf="@+id/imageView8"
                        android:layout_marginLeft="0dp" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="49dp"
                        android:layout_height="33dp"
                        app:srcCompat="@drawable/a"
                        tools:layout_editor_absoluteX="225dp"
                        tools:layout_editor_absoluteY="71dp" />


                </android.support.constraint.ConstraintLayout>



            </LinearLayout>


        </LinearLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>