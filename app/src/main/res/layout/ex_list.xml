<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp">

        <ExpandableListView
            android:id="@+id/lvExp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:weightSum="8"
            tools:layout_editor_absoluteY="321dp"
            tools:layout_editor_absoluteX="0dp">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="80dp"
                android:layout_height="41dp"
                app:srcCompat="@drawable/callus"
                app:layout_constraintRight_toLeftOf="@+id/imageView4"
                android:layout_marginRight="0dp"
                tools:layout_editor_absoluteY="10dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="126dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="102dp"
                android:layout_height="41dp"
                app:srcCompat="@drawable/cat"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="3dp"
                android:layout_marginRight="32dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.798" />

            <TextView
                android:id="@+id/textView2"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Live chat"
                android:textSize="10sp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="@+id/imageView4"
                android:layout_marginRight="15dp"
                app:layout_constraintRight_toRightOf="@+id/imageView4"
                app:layout_constraintHorizontal_bias="0.625"
                android:textColor="#F92B03"/>


            <TextView
                android:id="@+id/textView3"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:text="Call Us"
                android:textSize="10sp"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintLeft_toLeftOf="@+id/imageView5"
                app:layout_constraintRight_toRightOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                android:textColor="#F92B03"/>


        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>